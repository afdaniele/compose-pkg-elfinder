{
    "type": "object",
    "details": "Mounts",
    "_data": {
        "mounts": {
            "type": "array",
            "details": "List of mounts to be shown in the File Manager page",
            "_templates": {
                "local_directory": {
                    "type": "object",
                    "details": "Mountpoint - Local Directory",
                    "_data": {
                        "type": {
                            "type": "text",
                            "details": "Mountpoint type",
                            "default": "local_directory",
                            "__form__": {
                                "disabled": true,
                                "hidden": true,
                                "value": "local_directory"
                            }
                        },
                        "path": {
                            "type": "text",
                            "details": "Absolute path to the mountpoint"
                        },
                        "url": {
                            "type": "text",
                            "details": "URL to the mountpoint"
                        },
                        "upload": {
                            "type": "object",
                            "details": "Upload settings",
                            "_data": {
                                "mime_types_deny": {
                                    "type": "text",
                                    "details": "MIME types that cannot be uploaded (as a comma-separated list)",
                                    "default": "all",
                                    "__form__": {
                                        "title": "Deny MIME Types"
                                    }
                                },
                                "mime_types_allow": {
                                    "type": "text",
                                    "details": "MIME types that can be uploaded (as a comma-separated list)",
                                    "default": "none",
                                    "__form__": {
                                        "title": "Allow MIME Types"
                                    }
                                },
                                "strategy": {
                                    "type": "enum",
                                    "details": "Order of the rules above",
                                    "default": "deny,allow",
                                    "values": [
                                        "allow,deny",
                                        "deny,allow"
                                    ],
                                    "__form__": {
                                        "labels": [
                                            "Allow, Deny",
                                            "Deny,  Allow"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
